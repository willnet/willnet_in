    %script{:src => "https://s3-ap-northeast-1.amazonaws.com/willnet.in/js/cbpAnimatedHeader.js"}
    / Contact Form JavaScript
    %script{:src => "https://s3-ap-northeast-1.amazonaws.com/willnet.in/js/jqBootstrapValidation.js"}
    %script{:src => "https://s3-ap-northeast-1.amazonaws.com/willnet.in/js/contact_me.js"}
